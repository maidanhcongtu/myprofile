.contact-container {
	min-height: 300px;
	background-color: #eed9b8;
	padding: 90px 0px;
	& .title {
		text-align: center;
		margin-bottom: 30px;
		font-size: 3em;
		color: purple;
	}
	
	& .content {
		max-width: $contentWidth;
		margin: auto;
	}

	& .contact-map {
		text-align: center;
		margin-top: 30px;
	}
	
	& .contact-form {
		max-width: $contentWidth;
		margin: auto;
		
		& .control-left-50 {
			float: left;
			padding-left: 15px;
			padding-right: 15px;
			width: 50%;
			box-sizing: border-box;
		}
		
		& .address {

		}
		
		& .address-detail {
			margin-top: 35px;
		}
	}
}