$common-left-right-item {
	width: 50%;
	box-sizing: border-box;
	position: relative;
}

$resume_withLinkConnect = 20px;
$resume_minHeightContent = 200px;
$resume_baseMarginTopForTimeLife = 30px;
$resume_maincolor = #e5b267;

.resume-container {
	min-height: 300px;
	background-color: #f4debe;
	padding: 90px 0px;
	
	& ul.resume-tree {
		background-image: url(../../../app/asserts/images/backgrounds/vertical-line.png);
		background-position: 50% 0;
		background-repeat: repeat-y;
	}
	
	& .title {
		text-align: center;
		font-size: 3em;
		color: purple;
		margin-top: 30px;
		margin-bottom: 30px;
	}
	
	& .resume-detail-wrapper {
		max-width: 1000px;
		margin: auto;
	}
	
	& .resume-item.year {
		text-align: center;
		& span {
			display: inline-block;
			height: 60px;
			width: 60px;
			background: #cf5037;
			border-radius: 50px;
			line-height: 60px;
		}
	}

	& .resume-item {
		
		margin-bottom: 30px;
		box-sizing: border-box;
		
		// 6 class used to have differcen
		
		& .top-level-1 {
			margin-top: $resume_baseMarginTopForTimeLife*1;
		}

		& .top-level-2 {
			margin-top: $resume_baseMarginTopForTimeLife*2;
		}
		
		& .top-level-3 {
			margin-top: $resume_baseMarginTopForTimeLife*3;
		}
		
		& .top-level-4 {
			margin-top: $resume_baseMarginTopForTimeLife*4;
		}
		
		& .top-level-5 {
			margin-top: $resume_baseMarginTopForTimeLife*5;
		}
		
		& .top-level-6 {
			margin-top: $resume_baseMarginTopForTimeLife*6;
		}

		& .content-item {
			box-sizing: border-box;
			border: 1px solid $resume_maincolor;
			width: 100%;
			min-height: $resume_minHeightContent;
			padding: 20px;
			
			& .title-item {
				color: purple;
			}
			& .working-time {
				color: #999;
				font-style: italic;
				margin: 0px 0px 10px;
			}
		}

		& .left-item {
			@extend $common-left-right-item;
			float: left;
			padding-right: $resume_withLinkConnect;
		}
		
		& .left-item:after {
			content:" ";
			position: absolute;
			right: -11px;
			width: $resume_withLinkConnect - 2;
			height: 1px;
			background: $resume_maincolor;
			top: 20px;
			border: 2px solid #f4debe;
		}
		
		& .right-item {
			@extend $common-left-right-item;
			float: right;
			padding-left: $resume_withLinkConnect;
			
			& .content-item {
				float: right;
			}
		}
		
		& .right-item:before {
			content:" ";
			position: absolute;
			left: -11px;
			width: $resume_withLinkConnect - 2;
			height: 1px;
			background: $resume_maincolor;
			top: 20px;
			border: 2px solid #f4debe;
		}
	}
}